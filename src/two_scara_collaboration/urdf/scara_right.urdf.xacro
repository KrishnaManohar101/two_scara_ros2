<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="scara_right">

<xacro:macro name="scara_right_robot">

  <!-- ROS2 Control -->
  <ros2_control name="RightGazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="scara_right_joint_1">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="scara_right_joint_2">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="scara_right_gripper_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>
  <!-- Plugin removed -->

  <!-- Base Link -->
  <link name="scara_right_base_link">
    <collision>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.4" radius="0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.4" radius="0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- Joint 1 (Rotation 1) -->
  <joint name="scara_right_joint_1" type="revolute">
    <parent link="scara_right_base_link"/>
    <child link="scara_right_link_1"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" velocity="100" lower="-2.6" upper="2.6"/>
  </joint>

  <link name="scara_right_link_1">
    <collision>
      <origin xyz="0 0.75 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 1.6 0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0.75 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 1.6 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <gazebo reference="scara_right_link_1">
    <material>Gazebo/Blue</material>
  </gazebo>

  <!-- Joint 2 (Rotation 2) -->
  <joint name="scara_right_joint_2" type="revolute">
    <parent link="scara_right_link_1"/>
    <child link="scara_right_link_2"/>
    <origin xyz="0 1.5 0.1" rpy="0 0 0"/> <!-- L1 Increased to 1.5 -->
    <axis xyz="0 0 1"/>
    <limit effort="100" velocity="100" lower="-3.00" upper="3.00"/>
  </joint>

  <link name="scara_right_link_2">
    <collision>
      <origin xyz="0 0.5 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 1.1 0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0.5 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 1.1 0.1"/>
      </geometry>
      <material name="cyan">
        <color rgba="0 1 1 1"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <gazebo reference="scara_right_link_2">
    <material>Gazebo/SkyBlue</material>
  </gazebo>

  <!-- Gripper Base Joint -->
  <joint name="scara_right_gripper_joint" type="prismatic">
    <parent link="scara_right_link_2"/>
    <child link="scara_right_gripper_base_link"/>
    <origin xyz="0 1.0 0" rpy="0 0 0"/> <!-- L2 Increased to 1.0 -->
    <axis xyz="0 0 1"/>
    <limit effort="100" velocity="100" lower="-0.6" upper="0.0"/>
  </joint>

  <link name="scara_right_gripper_base_link">
    <collision>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.02"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.02"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.00001"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
    </inertial>
  </link>
  <gazebo reference="scara_right_gripper_base_link">
    <material>Gazebo/White</material>
  </gazebo>

  <!-- Fingers (Static for now or mimic?) -->
  <!-- Simplified to fixed fingers for collision for now, or keep user prismatic structure but naming prefixed -->
  
  <!-- Finger 1 -->
  <joint name="scara_right_finger_1_joint" type="fixed">
    <parent link="scara_right_gripper_base_link"/>
    <child link="scara_right_finger_1"/>
    <origin xyz="0 0.04 -0.23" rpy="0 0 0"/>
  </joint>
  <link name="scara_right_finger_1">
    <collision>
      <geometry><box size="0.02 0.01 0.02"/></geometry>
    </collision>
    <visual>
      <geometry><box size="0.02 0.01 0.02"/></geometry>
      <material name="white"/>
    </visual>
    <inertial>
       <mass value="0.00001"/>
       <inertia ixx="0.0" ixy="0" ixz="0" iyy="0.0" iyz="0" izz="0.0"/>
    </inertial>
  </link>

  <!-- Finger 2 -->
  <joint name="scara_right_finger_2_joint" type="fixed">
    <parent link="scara_right_gripper_base_link"/>
    <child link="scara_right_finger_2"/>
    <origin xyz="-0.04 0 -0.23" rpy="0 0 0"/>
  </joint>
  <link name="scara_right_finger_2">
    <collision>
      <geometry><box size="0.01 0.02 0.02"/></geometry>
    </collision>
    <visual>
      <geometry><box size="0.01 0.02 0.02"/></geometry>
      <material name="white"/>
    </visual>
     <inertial>
       <mass value="0.00001"/>
       <inertia ixx="0.0" ixy="0" ixz="0" iyy="0.0" iyz="0" izz="0.0"/>
    </inertial>
  </link>

  <!-- Finger 3 -->
  <joint name="scara_right_finger_3_joint" type="fixed">
    <parent link="scara_right_gripper_base_link"/>
    <child link="scara_right_finger_3"/>
    <origin xyz="0 -0.04 -0.23" rpy="0 0 0"/>
  </joint>
  <link name="scara_right_finger_3">
    <collision>
      <geometry><box size="0.02 0.01 0.02"/></geometry>
    </collision>
    <visual>
      <geometry><box size="0.02 0.01 0.02"/></geometry>
      <material name="white"/>
    </visual>
     <inertial>
       <mass value="0.00001"/>
       <inertia ixx="0.0" ixy="0" ixz="0" iyy="0.0" iyz="0" izz="0.0"/>
    </inertial>
  </link>

  <!-- Finger 4 -->
  <joint name="scara_right_finger_4_joint" type="fixed">
    <parent link="scara_right_gripper_base_link"/>
    <child link="scara_right_finger_4"/>
    <origin xyz="0.04 0 -0.23" rpy="0 0 0"/>
  </joint>
  <link name="scara_right_finger_4">
    <collision>
      <geometry><box size="0.01 0.02 0.02"/></geometry>
    </collision>
    <visual>
      <geometry><box size="0.01 0.02 0.02"/></geometry>
      <material name="white"/>
    </visual>
     <inertial>
       <mass value="0.00001"/>
       <inertia ixx="0.0" ixy="0" ixz="0" iyy="0.0" iyz="0" izz="0.0"/>
    </inertial>
  </link>
</xacro:macro>
</robot>
